#include <stdio.h>
#include "NovoSUperTrunfo2.h"

int main(){
    char estado1, estado2;
    char codigoDaCarta1[4], codigoDaCarta2[4];
    char nomeDaCidade1[50], nomeDaCidade2[50];
    int populacao1, populacao2;
    float area1, area2;
    float pib1, pib2;
    int pontosTuristicosNaCidade1, pontosTuristicosNaCidade2;
    float densidadePopulacional1, densidadePopulacional2;
    float pibPerCapita1 = pib1 * 1000000000;
    float pibPerCapita2 = pib2 * 1000000000;

    printf("Carta Super Trunfo 1:\n");
    printf("Digite uma letra de A a Z:\n");
    scanf(" %c", &estado1);
    getchar();
    printf("Digite o codigo da carta de 1 a 26 (letra escolhida + o número):\n");
    scanf("%3s", codigoDaCarta1);
    printf("Digite o nome da cidade:\n");
    scanf(" %[^\n]", nomeDaCidade1); //Usando o %[^\n] e %3s para ler os nomes das cidade e limitar a leitura, após algumas pesquisas, porque com %s ou %c não está funcionando. O programa para de ler.
    printf("Digite o número de população:\n");
    scanf("%d", &populacao1);
    printf("Digite a área (em km²):\n");
    scanf("%f", &area1);
    printf("Digite o PIB:\n");
    scanf("%f", &pib1);
    printf("Digite a quantidade de pontos turísticos:\n");
    scanf("%d", &pontosTuristicosNaCidade1);
    printf("\n");

   printf("Carta Super Trunfo 2:\n");
    printf("Digite uma letra de A a Z:\n");
    scanf(" %c", &estado2);
    getchar();
    printf("Digite o codigo da carta de 1 a 26 (letra escolhida + o número):\n");
    scanf("%3s", codigoDaCarta2);
    printf("Digite o nome da cidade:\n");
    scanf(" %[^\n]", nomeDaCidade2); //Usando o %[^\n] e %3s para ler os nomes das cidade e limitar a leitura , após algumas pesquisas, porque com %s ou %c não está funcionando. O programa para de ler.
    printf("Digite o número de população:\n");
    scanf("%d", &populacao2);
    printf("Digite a área (em km²):\n");
    scanf("%f", &area2);
    printf("Digite o PIB:\n");
    scanf("%f", &pib2);
    printf("Digite a quantidade de pontos turísticos:\n");
    scanf("%d", &pontosTuristicosNaCidade2);
    printf("\n");

//Calculo da PIB per capita e Densidade populacional 1
    densidadePopulacional1 = populacao1 / area1;
    pibPerCapita1 = (pib1 * 1000000000) / populacao1;

//Calculo da PIB per capita e Densidade populacional 
    densidadePopulacional2 = populacao2 / area2;
    pibPerCapita2 = (pib2 * 1000000000) / populacao2;

//Mostraremos o resultado final, logo após as cartas serem comparadas para o jogador
    printf("\n--- Resultado Final ---\n");
    printf("\nCarta Super Trunfo 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigoDaCarta1);
    printf("Nome da cidade: %s\n", nomeDaCidade1);
    printf("População: %d\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Número de pontos turísticos: %d\n", pontosTuristicosNaCidade1);
    printf("Densidade Populacional: %.2f hab/km²\n", densidadePopulacional1);
    printf("PIB per Capita: %.2f reais\n", pibPerCapita1);

    printf("\nCarta Super Trunfo 2:\n");
    printf("O estado: %c\n", estado2);
    printf("O código: %s\n", codigoDaCarta2);
    printf("O nome da cidade: %s\n", nomeDaCidade2);
    printf("A população: %d\n", populacao2);
    printf("A área: %.2f km²\n", area2);
    printf("O PIB: %.2f bilhões de reais\n", pib2);
    printf("O número de pontos turísticos: %d\n", pontosTuristicosNaCidade2);
    printf("Densidade Populacional: %.2f hab/km²\n", densidadePopulacional2);
    printf("PIB per Capita: %.2f reais\n", pibPerCapita2);


    return 0;
}

